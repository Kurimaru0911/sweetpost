<% if logged_in? %>
  <div class="row">
    <aside class="col-md-4">
      <%= form_for(@sweet) do |f| %>
      
        <div class="form-group">
          <%= f.label :name, 'name' %>
          <%= f.text_field :name, class: 'form-control'%>
        </div>

        <div class="form-group">
          <%= f.label :prefecture_id, 'Prefecture' %>
          <%= f.collection_select :prefecture_id, @prefectures, :id, :name, {}, class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= f.label :content, 'content' %>
          <%= f.text_area :content, class: 'form-control', rows: 5 %>
        </div>

        <div class="form-group">
          <%= f.label :image %>
          <%= image_tag f.object.image.thumb.url if f.object.image? %>
          <%= f.file_field :image %>
          <%= f.hidden_field :image_cache %>
        </div>

        <%= f.submit 'Post', class: 'btn btn-primary btn-block' %>
      <% end %>
    </aside>
    <div class="col-xs-8">
      <%= render 'sweets/sweets', sweets: @sweets %>
    </div>
  </div>
<% else %>
  <div class="center jumbotron">
    <div class="text-center">
      <h1>ようこそ！みんなの甘味処へ！</h1>
      <%= link_to 'Sign up now!', signup_path, class: 'btn btn-lg btn-primary' %>
    </div>
  </div>
  <div class="col-sm-5">
  <h2>新着投稿</h2>
    <%= render 'sweets/sweets', sweets: @sweets %>
  </div>
  <div class="col-sm-5">
  <h2>ランキング</h2>
  <%= render 'sweets/sweets', sweets: @rank %>
  </div>
<% end %>