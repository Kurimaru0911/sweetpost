<h1><%= @sweet.name %>の編集</h1>
<%= link_to image_tag(@sweet.image.thumb.url), sweet_path(@sweet) %>
<%= form_for(@sweet) do |f| %>
  <div class="form-group">
    <%= f.label :name, 'name' %>
    <%= f.text_field :name, class: 'form-control'%>
  </div>
  <div class="form-group">
    <%= f.label :prefecture_id, 'Prefecture' %>
    <%= f.collection_select :prefecture_id, @prefectures, :id, :name, {}, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :content, 'content' %>
    <%= f.text_area :content, class: 'form-control', rows: 5 %>
  </div>
  <%= f.submit 'Post', class: 'btn btn-primary btn-block' %>
<% end %>

<%= link_to '一覧に戻る', root_path %>