<% if current_user.favorite?(sweet) %>
  <%= form_for(current_user.favorites.find_by(sweet_id: sweet.id), html: { method: :delete, style: :'display: inline' }) do |f| %>
    <%= hidden_field_tag :sweet_id, sweet.id %>
    <%= f.submit 'お気に入り解除', class: 'btn btn-warning btn-xs' %>
  <% end %>
<% else %>
  <%= form_for(current_user.favorites.build, html: { style: :'display: inline' }) do |f| %>
    <%= hidden_field_tag :sweet_id, sweet.id %>
    <%= f.submit 'お気に入り', class: 'btn btn-warning btn-xs' %>
  <% end %>
<% end %>
